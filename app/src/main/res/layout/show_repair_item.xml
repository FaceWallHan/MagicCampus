<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/activity_margin">

    <ImageView
        android:id="@+id/repair_item_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline33"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repair_item_content"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline34"
        app:layout_constraintLeft_toLeftOf="@id/guideline33"
        app:layout_constraintRight_toRightOf="@id/guideline36"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repair_item_area"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline35"
        app:layout_constraintLeft_toLeftOf="@id/guideline33"
        app:layout_constraintRight_toRightOf="@id/guideline36"
        app:layout_constraintTop_toTopOf="@id/guideline34" />

    <TextView
        android:id="@+id/repair_item_project"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline37"
        app:layout_constraintLeft_toLeftOf="@id/guideline33"
        app:layout_constraintRight_toRightOf="@id/guideline36"
        app:layout_constraintTop_toTopOf="@id/guideline35" />

    <TextView
        android:id="@+id/repair_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline38"
        app:layout_constraintLeft_toLeftOf="@id/guideline33"
        app:layout_constraintRight_toRightOf="@id/guideline36"
        app:layout_constraintTop_toTopOf="@id/guideline37" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/repair_item_go_appraise"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline33"
        app:layout_constraintRight_toRightOf="@id/guideline36"
        app:layout_constraintTop_toTopOf="@id/guideline38"/>
    <TextView
        android:id="@+id/repair_item_date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline36"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline34" />
    <TextView
        android:id="@+id/repair_item_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline34"
        app:layout_constraintLeft_toLeftOf="@id/guideline36"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline35" />
    <TextView
        android:id="@+id/repair_item_address"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline35"
        app:layout_constraintLeft_toLeftOf="@id/guideline36"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline37" />
    <TextView
        android:id="@+id/repair_item_appraise"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline37"
        app:layout_constraintLeft_toLeftOf="@id/guideline36"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline38" />
    <TextView
        android:id="@+id/repair_item_schedule"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guideline36"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>